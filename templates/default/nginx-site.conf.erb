# Managed by Chef for <%= @domain %>
server {
    listen 80;
    server_name www.<%= @domain %>;
    rewrite ^ $scheme://<%= @domain %>$request_uri? permanent;
}

server {
    listen 80<% if @default_server %> default_server<% end %>;
    server_name localhost <%= @domain %>;

<% if @remove_trailing_slash %>
    # remove trailing slash
    rewrite ^/(.*)/$ $scheme://<%= @domain %>/$1 permanent;
<% end %>

    root <%= @document_root %>;

    error_log /var/log/nginx/<%= @domain %>-error.log error;
    access_log off;

    client_max_body_size 4M;

    index <%= @index_file %>;

    try_files $uri $uri/ @rewrite;

    location @rewrite {
        rewrite ^/(.*)$ /<%= @index_file %>/$1;
    }

    location = /nginx_stub_status {
        stub_status on;
        allow 127.0.0.1;
        deny all;
    }


    location ~ \.php {
        # limit_conn default 30;

        # Messes up with SEF URIs, not sure it's even needed
        # try_files $uri =404;

        fastcgi_index <%= @index_file %>;
        #fastcgi_pass 127.0.0.1:9000;
        fastcgi_pass unix:/var/run/php-fpm-www.sock;

        include fastcgi_params;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_param PATH_INFO $fastcgi_path_info;
        fastcgi_param PATH_TRANSLATED $document_root$fastcgi_path_info;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        # fastcgi_param  SERVER_PORT 80;
        # fastcgi_param  SERVER_NAME example.com;
    }

    location ~ /\.ht {
        deny all;
    }
}
